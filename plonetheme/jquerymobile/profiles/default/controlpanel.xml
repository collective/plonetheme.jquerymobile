<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plonetheme.jquerymobile">

    <configlet
        title="JQueryMobile Theme settings"
        action_id="plonetheme.jquerymobile.themesettings"
        appId="plonetheme.jquerymobile"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@themejquerymobile-controlpanel"
        icon_expr="string:${portal_url}/++resource++plone.app.theming.gif"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
